@model List<EmployeeApp.Models.Employee>

<h2>Employee List</h2>

<a href="/Employee/Create">Add Employee</a>

<table border="1" cellpadding="8" cellspacing="0">
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Salary</th>
        <th>Action</th>
    </tr>

@foreach (var emp in Model)
{
    <tr>
        <td>@emp.Name</td>
        <td>@emp.Email</td>
        <td>@emp.Salary</td>
        <td>
            <a href="/Employee/Delete/@emp.Id">Delete</a>
        </td>
    </tr>
}
</table>

